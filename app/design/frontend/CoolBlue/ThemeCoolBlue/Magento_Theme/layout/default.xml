<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
        <referenceBlock name="header-wrapper">
            <block class="Magento\Framework\View\Element\Html\Link" name="categories-link" before="top.search">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">View all categories</argument>
                    <argument name="path" xsi:type="string" translate="true">customlink</argument>
                </arguments>
            </block>
        </referenceBlock>

        <move element="top.links" destination="header-wrapper" after="top.search"/>
        <move element="compare-link-wrapper" destination="header-wrapper" before="top.search"/>
        <move element="minicart" destination="header-wrapper" after="top.links"/>
    </body>
</page>
